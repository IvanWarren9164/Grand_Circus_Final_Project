@{
}

@model Final_Project.Models.ViewModels.GardenControllerViewModels.MemberProfileViewModel
<link rel="stylesheet" href="~/css/stylesheet.css" />


@if (!Model.InDatabase)
{
    <a asp-controller="Garden" asp-action="MemberProfileForm">Please head to the member profile form to update your information!</a>
}
else
{
    <div id="memberProfile">

        <h1>Welcome to your gardening profile, @Model.FirstName!</h1>

        <p>
            We are happy to see that you are using this garden for @Model.Usage! Please
            continue searching and building your garden! Explore thousands of species and don't forget to plant @Model.FavoritePlant, your favorites!
        </p>

        <br />

        @if (Model.UserHaveFave)
        {
        <h3>Below is a @Model.TreflePlantName!</h3>
        <img src="@Model.ImgFavPlant" />
        }
        else
        {
            <a asp-controller="Home" asp-action="index">Head to the search page to add a favorite!</a>
        }
    </div>
}

