@model Final_Project.Models.ViewModels.GardenControllerViewModels.VacationWeatherViewModel

    <link rel="stylesheet" href="~/css/stylesheet.css" />

<div class="weatherResults">

    @if (Model.InDatabase)
    {
    <h1>Current temperature is @Model.Temperature<span>&#176;</span>F!</h1>
    <img class="weatherIcon" src="@Model.ImgUrl"/>
    }
    else
    {
        <a class="UserProfileLink" asp-controller="Garden" asp-action="MemberProfileForm">Please fill out your user profile, so we can store your location</a>
    }
</div>

